.row
  .small-5.columns.small-centered#card_padding
    .card
      %img{ src: "#{@user.avatar.medium_avatar}"}
      .content
        %p#default_font= @user.username
        .row
          .small-6.columns
            = link_to "Chillin?", friendships_path(match_id: @user), method: :post, class: "button success small"
          .small-6.columns
            = link_to "Meh...", profiles_path(id: @next_user), class: "button alert small"

.row
  .small-12.columns
    %ul.small-block-grid-5.posterimage
      - @list_of_watchedtvshows.each do |show|
        %li
          %img{src: "#{Tvshow.find(show.tvshow).posterlink}"}
          %h4#default_font= link_to Tvshow.find(show.tvshow).name, Tvshow.find(show.tvshow).imdblink
          %span= render 'profiles/stars', locals: {gold: show.rating, silver: 5 - show.rating}
