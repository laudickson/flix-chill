.row
  .small-4.columns.small-centered.cardobject
    .card
      %img{ src: "#{@user.avatar.large_avatar}"}
      .content
        %p.defaultfont= @user.username

.row
  .small-12.columns
    %ul.small-block-grid-5.posterimage
      - @list_of_watchedtvshows.each do |show|
        %li
          %img{src: "#{Tvshow.find(show.tvshow).posterlink}"}
          %h4.defaultfont= link_to Tvshow.find(show.tvshow).name, Tvshow.find(show.tvshow).imdblink
          %span= render 'profiles/stars', locals: {gold: show.rating, silver: 5 - show.rating}
