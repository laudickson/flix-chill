<p class="signupheader small-7 small-centered columns">Hello, we're glad to have you!</p>

<div class="small-6 small-centered columns auth-plain">
  <div class="signup-panel left-solid">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-torso-female"></i></span>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :username, autofocus: true, placeholder: "username" %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-mail"></i></span>
      </div>
      <div class="small-10 columns">
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-lock"></i></span>
      </div>
      <div class="small-10 columns">
        <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum" %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-loop"></i></span>
      </div>
      <div class="small-10 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-photo"></i></span>
      </div>
      <div class="small-10 columns" style="padding-left: .5rem;">
        <%= f.label :avatar do %>
          <span>Profile picture</span>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button success", id: "default_font" %>
    </div>
    <% end %>
    <div class = "small-10 columns">
      <span id = "default_font"><%= render "devise/shared/links" %></span>
    </div>
  </div>
</div>
